<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       default-lazy-init="true"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="cepasaService" class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="proxyInterfaces" value="org.zeromq.support.rpc.proto.CepasaService"/>
    <property name="interceptorNames">
      <list>
        <value>serviceInterceptor</value>
      </list>
    </property>
  </bean>

  <bean id="serviceInterceptor" class="org.zeromq.support.rpc.ZmqRpcCaller" init-method="init">
    <property name="zmqContext" ref="org.zeromq.messaging.ZmqContext"/>
    <property name="connectAddresses" value="inproc://client"/>
    <property name="outputAdapter">
      <bean class="org.zeromq.support.rpc.proto.ProtoCallerOutputAdapter"/>
    </property>
    <property name="inputAdapter">
      <bean class="org.zeromq.support.rpc.proto.ProtoCallerInputAdapter"/>
    </property>
    <property name="eventListeners">
      <bean class="org.zeromq.messaging.device.service.KeepCorrelationEventListener"/>
    </property>
  </bean>

  <bean class="org.zeromq.messaging.device.service.FairEmitter">
    <property name="zmqContext" ref="org.zeromq.messaging.ZmqContext"/>
    <property name="frontendAddresses" value="inproc://client"/>
    <property name="backendAddresses" value="tcp://localhost:5577"/>
  </bean>

</beans>
