<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean class="org.zeromq.messaging.device.service.LruRouter">
    <property name="zmqContext" ref="org.zeromq.messaging.ZmqContext"/>
    <property name="frontendAddresses" value="tcp://*:833"/>
    <property name="backendAddresses" value="tcp://*:733"/>
    <property name="socketIdentityStorage">
      <bean class="org.zeromq.messaging.device.service.LruCache"/>
    </property>
  </bean>

  <bean class="org.zeromq.messaging.device.service.FairActiveAcceptor">
    <property name="zmqContext" ref="org.zeromq.messaging.ZmqContext"/>
    <property name="frontendAddresses" value="tcp://localhost:733"/>
    <property name="backendAddresses" value="inproc://service"/>
  </bean>

  <bean class="org.zeromq.messaging.device.service.WorkerAnonymEmitter" scope="prototype">
    <property name="zmqContext" ref="org.zeromq.messaging.ZmqContext"/>
    <property name="pollTimeout" value="1"/>
    <property name="connectAddresses" value="inproc://service"/>
    <property name="messageProcessor">
      <bean class="org.zeromq.support.rpc.ZmqRpcMsgProcessor">
        <property name="inputAdapter">
          <bean class="org.zeromq.support.rpc.javanative.JavanativeMsgProcessorInputAdapter"/>
        </property>
        <property name="outputAdapter">
          <bean class="org.zeromq.support.rpc.javanative.JavanativeMsgProcessorOutputAdapter"/>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="org.zeromq.support.rpc.javanative.OrigatoService" class="org.zeromq.support.rpc.javanative.OrigatoServiceImpl"/>

</beans>
